{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "Bundler", //change from NodeNext to drop file extensions in my imports
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]}
  },
  "include": ["src"]
}
